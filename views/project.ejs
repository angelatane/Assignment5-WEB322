<html lang="en">
  <%- include('partials/head') %>
  <body>
    <%- include('partials/navbar') %>

<div class="max-w-2xl mx-auto mt-10 px-6">
  <div class="card bg-white shadow-lg rounded-lg overflow-hidden">
    <figure>
      <img src="<%= project.feature_img_url %>" alt="<%= project.title %>" class="w-full h-64 object-cover" />
    </figure>
    <div class="p-6">
      <h2 class="text-2xl font-bold text-blue-700 mb-2"><%= project.title %></h2>
      <p class="text-sm text-gray-600"><strong>Intro:</strong> <%= project.intro_short %></p>
      <p class="text-sm text-gray-600"><strong>Summary:</strong> <%= project.summary_short %></p>
      <p class="text-sm text-gray-600"><strong>Impact:</strong> <%= project.impact %></p>
      <p class="text-sm text-gray-600"><strong>Sector:</strong> <%= project.sector_name %></p>
      <a href="<%= project.original_source_url %>" target="_blank" class="text-blue-500 underline block mt-4">View Original Source</a>
    </div>
  </div>
</div>
